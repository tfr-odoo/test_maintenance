<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="integration_form_view" model="ir.ui.view">
        <field name="name">edi.integration.form</field>
        <field name="model">edi.integration</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object"
                        name="test_connection"
                        string="Test Connection"
                        attrs="{'invisible': [('has_sub_integration', '=', True)]}"
                    />
                    <button type="object"
                        name="process_integration"
                        string="Synchronize"
                        class="oe_highlight"
                        context="{'raise_error': True}"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "active"}'/>
                        </button>
                        <button type="object" name="open_synchronizations"
                            icon="fa-cloud-upload" class="oe_stat_button"
                            string="Synchronizations"
                        />
                    </div>
                    <div class="oe_title">
                        <h3>
                            <label for="name" string="Name" class="oe_edit_only"/>
                            <field name="name"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="sequence" />
                            <field name="has_sub_integration" />
                            <field name="integration_flow"/>
                            <field name="type" />
                            <field name="synchronization_creation" attrs="{'invisible': ['|', ('has_sub_integration', '=', True), ('integration_flow', '=', 'in')]}" />
                        </group>
                    </group>
                    <notebook>
                        <page name="sub_integration" string="Sub Integrations" attrs="{'invisible': [('has_sub_integration', '=', False)]}" >
                            <field name="sub_integration_ids" >
                                <tree editable="bottom">
                                    <field name="sequence" />
                                    <field name="name" readonly="1" />
                                </tree>
                            </field>
                        </page>
                        <page name="status" string="Status" attrs="{'invisible': [('has_sub_integration', '=', True)]}">
                            <group>
                                <field name="last_success_date" />
                                <field name="last_failure_date" />
                                <field name="last_sync_status" />
                            </group>
                        </page>
                        <page name="configuration" string='Configuration' attrs="{'invisible': [('has_sub_integration', '=', True)]}">
                            <group>
                                <group>
                                    <field name="synchronization_content_type" />
                                    <field name="connection_id"/>
                                    <field name="record_filter_id" attrs="{'invisible': [('integration_flow', '=', 'in')]}" />
                                </group>
                            </group>
                            <separator string="Integration Parameter" />
                            <field name="parameter" />
                        </page>
                        <page name="cron" string="Cron information">
                            <group>
                                <group>
                                    <field name="user_id"/>
                                </group>
                                <group>
                                    <label for="interval_number" string="Execute Every"/>
                                    <div>
                                        <field name="interval_number" class="oe_inline"/>
                                        <field name="interval_type" class="oe_inline"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                        <page name="error" string="Error" attrs="{'invisible': [('has_sub_integration', '=', True)]}">
                            <field name="error_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="integration_tree_view" model="ir.ui.view">
        <field name="name">edi.integration.tree</field>
        <field name="model">edi.integration</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="integration_flow"/>
                <field name="cron_id"/>
            </tree>
        </field>
    </record>


    <record id="integration_kanban_view" model="ir.ui.view">
        <field name="name">edi.integration.kanban</field>
        <field name="model">edi.integration</field>
        <field name="arch" type="xml">
            <kanban string="Integrations" edit="0" create="0" delete="0">
                <field name="name"/>
                <field name="integration_flow"/>
                <field name="cron_id"/>
                <field name="active"/>
                <field name="last_success_date" />
                <field name="last_failure_date" />
                <field name="last_sync_status" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click o_has_icon">
                            <div class="o_project_kanban_main">
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <div class="o_primary">
                                            <h3><t t-esc="record.name.value"/></h3>
                                        </div>
                                        <div>
                                            <strong>Last Status: <t t-esc="record.last_sync_status.value"/></strong>
                                        </div>
                                        <div>
                                            <span>Last Sync Sucess: <t t-esc="record.last_success_date.value"/></span>
                                        </div>
                                        <div>
                                            <span>Last Sync Fail: <t t-esc="record.last_failure_date.value"/></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="integration_search_view" model="ir.ui.view">
        <field name="name">edi.integration.search</field>
        <field name="model">edi.integration</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="integration_flow"/>
                <field name="type" />
                <field name="synchronization_content_type"/>
                <filter name="all" string="All" domain="['|', ('active', '=', True), ('active', '=', False)]"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <filter name="success" string="Success" domain="[('last_sync_status', '=', 'Success'), '|', ('active', '=', True), ('active', '=', False)]" />
                <filter name="success" string="Fail" domain="[('last_sync_status', '=', 'Fail'), '|', ('active', '=', True), ('active', '=', False)]" />
                <group string="Group By">
                    <filter name="group_by_last_sync_status" string="Sync Status" context="{'group_by': 'last_sync_status'}" />
                    <filter name="group_by_integration_flow" string="Type" context="{'group_by': 'integration_flow'}"/>
                    <filter name="group_by_synchronization_content_type" string="Content Type" context="{'group_by': 'synchronization_content_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="integrations_act_window" model="ir.actions.act_window">
        <field name="name">Integrations</field>
        <field name="res_model">edi.integration</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="edi_base.integration_search_view"/>
        <field name="context" eval="{
            'search_default_all': True,
            'search_default_group_by_last_sync_status' : True,
        }"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent">Here you will find the integrations installed in your system.</p>
        </field>
    </record>



    <menuitem id="integrations_menu" parent="root_menu" name="Integrations" sequence="1" action="integrations_act_window"/>

</odoo>
